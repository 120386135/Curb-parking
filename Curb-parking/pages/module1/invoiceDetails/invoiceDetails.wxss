.backView {
  background: rgb(245, 245, 245, 1);
  width: 100vw;
  height: 90vh;
}

.topView-lineView {
  background: rgb(245, 245, 245, 1);
  width: 100vw;
  height: 20rpx;
}

.topView {
  background: white;
  width: 92%;
  height: 120rpx;
  margin: 10rpx 30rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 2rpx 4rpx 0rpx rgb(0, 0, 0, .13);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.topView-left {
  /* background: red; */
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center;
}

.topView-left-top {
  /* background: yellow; */
  margin-left: 30rpx;
  width: 70%;
}

.topView-left-bottom {
  /* background: chocolate; */
  margin-left: 30rpx;
  width: 70%;
}

.topView-right {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
}

.titleView {
  width: 92%;
  height: 80rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.listView {
  background: white;
  border-radius: 10rpx;
  box-shadow:0px 2px 4px 0px rgba(0,0,0,0.13);
  width: 92vw;
  margin-left: 30rpx;
}

.listView-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
  margin-left: 20rpx;
}

.listView-text {
  margin-right: 40rpx;
}

.remark {
  background: rgb(245, 245, 245, 1);
  width: 100vw;
  height: 90rpx;
}

.remarkView {
  /* background: yellow; */
  display: flex;
  width: 92%;
  height: 100%;
  margin-left: 30rpx;
  margin-top: 60rpx;
}

.remarkView-leftView {
  /* background: rebeccapurple; */
  color:rgba(208,20,44,1);
  width: 10%;
  height: 100%;
}

.remarkView-rightView {
  /* background: chartreuse; */
  width: 90%;
  height: 100%;
  line-height: 28rpx;
}

.bottomView {
  background: rgb(245, 245, 245, 1);
  width: 100vw;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottomView-view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 92%;
  height: 88rpx;
  border-radius: 44rpx;
}
