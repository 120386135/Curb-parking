/* pages/order-success/order-success.wxss */

.pageBG {
  background-color: #f5f5f5;
  min-height: 100vh;
}
.container {
  background-color: #fff;
}
.tip-href:after{
  content:".";
  display:block;
  height:0;
  clear:both;
  visibility:hidden;
}
.href{
  width:130rpx;
  height:45rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Regular;
  color:#888888FF;
  float: right;
  margin:30rpx 20rpx 0 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.href image{
  width: 30rpx;
  height: 33rpx;
}
.top{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 80rpx;
}
.success-icon{
  width: 140rpx;
  height: 140rpx;
  margin-top: 102rpx;
}
.tip-top{
  font-family: PingFang-SC-Medium;
  color: #333333;
  font-size: 34rpx;
  margin-top: 50rpx;
}
.tip-bottom-left{
  margin-top: 38rpx;
  font-family:HelveticaNeue-Medium;
  font-weight:500;
  font-size: 30rpx;
  color: #333333;
}
.tip-bottom-right{
  font-family:PingFang-SC-Regular;
  font-size: 72rpx;
  color: #333333;
  font-weight: bold;
}
.bottom{
  margin: 0rpx auto;
  border-top: 10px solid #f5f5f5;
  width: 100%;
  /* padding:0 5%; */
  overflow: hidden;
  padding:0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}
.bottom-left,.bottom-right{
  display: inline-flex;
  flex-direction: column;
}
.bottom-left{
  float: left;
}
.bottom-right{
  float: right;
}
.text-left, .text-right{
  font-size: 30rpx;
  font-family:PingFang-SC-Regular;
  margin-top: 40rpx;
}
.text-left{
  color: #999999;
  text-align: left;
}
.text-right{
  color: #333333;
  text-align: right;
}