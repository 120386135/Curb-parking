/* pages/invoice/invoice.wxss */
.page {
  display: inline-block;
  text-align: center;
  width: 100vw;
  height: 90vh;
  background:rgba(245,245,245,1);
}
.listView{
  display: flex;
  background: white;
  width: 100%;
  height: 128rpx;
}

.listView-left{
  display: flex;
  justify-content: flex-start;
  align-items:center;
  width: 80%;
  margin-left: 30rpx;
}

.left-text{
  font-size:32rpx;
  font-family:PingFang-SC-Regular;
  color:rgba(65,65,65,1);
}

.listView-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 20%;
  float: right;
  margin-right: 30rpx;
}
.right-image{
  width: 26rpx;
  height: 26rpx;
}
