/* pages/module3/services/payCost/confirmOrder.wxss */
.page{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  height: 90vh;
  position: relative;
  background:rgba(245,245,245,1);
}
.top{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 155px;
  background:rgba(255,255,255,1);
  width: 100vw;
  border-bottom: 1rpx solid rgba(230,230,230,1);
  border-top: 1rpx solid rgba(230,230,230,1);
}
.detail{
   width: 100vw;
  display: flex;
  flex-direction: column;
  position: relative;
  background:rgba(255,255,255,1);
  height: 230px;
  padding-top: 30px;
}
.item{
  position: relative;
  height: 60px;
}
.money{
  height:48px;
  font-size:40px;
  font-family:HelveticaNeue;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:49px;
}
.state{
  height:17px;
  font-size:12px;
  font-family:PingFang-SC;
  color:rgba(153,153,153,1);
  font-weight:400;
  line-height:17px;
  margin-top: 15px;
}
.left{
  display: flex;
  float: left;
  height:21px;
  font-size:15px;
  font-family:PingFang-SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:21px;
  margin-left: 15px;
  }
.right{
  display: flex;
  float: right;
  height:20px;
  font-size:14px;
  font-family:PingFang-SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:20px;
  text-align: right;
  position: relative;
  margin-right: 15px;
}
.bottomBtn{
  position: absolute;
  width: 90vw;
  height:49px;
  box-shadow:0px 2px 4px 0px;
  border-radius:25px;
  color: #fff;
  line-height:49px;
}
.moneyleft{
  height:16px;
  font-size:16px;
  font-family:HelveticaNeue;
  color:rgba(51,51,51,1);
  line-height:16px;
}


