/* pages/my-car/my-car.wxss */
page{
  background-color: #f5f5f5;
  
  width:100vw;
}
.pageW {
  width:100%;
  /* padding:0 20rpx; */
  box-sizing: border-box;
}
.coat{
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.tip{
  display: flex;
  align-items: center;
  /* font-family:PingFang-SC-Regular; */
  /* line-height:84rpx; */
  height: 84rpx;
  margin: 0rpx 25rpx;
  /* margin: 30rpx 0 0 30rpx; */
}
.car{
  height:300rpx;
  background:rgba(255,255,255,1);
  /* background-image: url('../../../images/mycar.png'); */
  box-shadow:0px 2rpx 4rpx 0px rgba(0,0,0,0.14);
  border-radius:8rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.car-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 208rpx;
  z-index: 999;
}

.plate{
  position: relative;
  font-size:40rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:white;
  line-height:67rpx;
  margin-top: 65rpx;
  margin-left: 160rpx;
  z-index: 1000;
}
.relieve{
  position: relative;
  width:180rpx;
  border-radius:50rpx;
  border:1rpx solid white;
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  color:white;
  margin-bottom: 5rpx;
  background-color: transparent;
}
.submit{
  margin-left: 30rpx;
  width:680rpx;
  border-radius:50rpx;
  font-size:34rpx;
  font-family:PingFang-SC-Medium;
  /* font-weight:500; */
  color:rgba(255,255,255,1);
  position: fixed;
  bottom: 70rpx;
}

.bottomView {
  background: white;
  width: 100%;
  height: 100rpx;
  border-radius: 8rpx;
  z-index: 1001;
  margin-top: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bottomView-left {
  /* background: chartreuse; */
  width: 22%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottomView-right {
  /* background: yellow; */
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}