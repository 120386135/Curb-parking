.coat{
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}
.main{
  width:750rpx;
  height:1160rpx;
  background:rgba(255,255,255,1);
}
.bottom-left,.bottom-right{
  display: flex;
  flex-direction: column;
}
.bottom-left{
  float: left;
  margin: 12rpx 0 0 30rpx;
  display: inline-flex;
}
.bottom-right{
  float: right;
  margin: 51rpx 0 0 0;
}
.text-left{
  margin-top: 10rpx;
}
.text-right{
